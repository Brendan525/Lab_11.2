
@{
    ViewBag.Title = "Menu";
    @Styles.Render("~/Content/OrderMenu.css");
    @Scripts.Render("~/Scripts/Validation.js");
}

<h2 class="menuTitle">Coffee Menu</h2>

<fieldset>
    <p class="menuTitle">Please select from the menu below </p><br /> <br />

    <label for="drinkSelection">Please Select Your Drink:</label><br>
    <select id="drinks" name="drink">
        <option>Cappuccino</option>
        <option>Espresso</option>
        <option>Iced Coffee</option>
        <option>Latte</option>
        <option>Cold Brew Coffee</option>
        <option>Frappé Coffee</option>
        <option>Caffé Mocha</option>
        <option @*value="DE"*@>Carajillo</option>
        <br />
    </select> <br><br>

    <label for="drinkSize">Please Select Drink Size:</label><br>
    <select id="cupSize" name="size">
        <option>Short</option>
        <option>Tall</option>
        <option>Grande</option>
        <option>Venti</option>
        <br />
    </select> <br /> <br />


    <input type="radio" id="pickup" name="selection" value="Pick-Up" onclick="displayAddress()">
    <label for="Pick-Up" class="pickup">Pick-Up</label> <br />


    <input type="radio" id="delivery" name="selection" value="Delivery" onclick="displayAddress()">
    <label for="Delivery" class="delivery">Delivery</label> <br /> <br />

    <div id="pickUpTime" style="display:none">
        <input type="checkbox" id="starter1" name="start" value="Bulbasaur">
        <label for="bulbasaur" class="bulbasaurTitle"> Bulbasaur</label>
    </div>

    <input type="submit" class="submit" value="Submit">


</fieldset>


